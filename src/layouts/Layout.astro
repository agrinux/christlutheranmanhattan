---
import '@fontsource/cinzel';
import '@fontsource/crimson-text';
import '../styles/colors.css';
import '../styles/typography.css';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Christ Lutheran Church (LCMS) in Manhattan, KS - A congregation committed to historic Lutheran worship and teaching." } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Christ Lutheran Church</title>
  </head>
  <body class="min-h-screen bg-liturgical-cream text-liturgical-black">
    <Navigation />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  /* Keep existing styles */
</style>