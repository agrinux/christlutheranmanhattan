---
import '@fontsource/cinzel';
import '@fontsource/crimson-text';
import '../styles/colors.css';
import '../styles/typography.css';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Christ Lutheran Church (LCMS) in Manhattan, KS - A congregation committed to historic Lutheran worship and teaching." } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Standard favicons -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    
    <!-- Android -->
    <link rel="icon" type="image/png" sizes="192x192" href="/android-chrome-192x192.png">
    <link rel="icon" type="image/png" sizes="512x512" href="/android-chrome-512x512.png">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="theme-color" content="#5c2228">
    
    <!-- iOS -->
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    
    <!-- Windows -->
    <meta name="msapplication-TileColor" content="#5c2228">
    <meta name="msapplication-TileImage" content="/android-chrome-192x192.png">

    <!-- Web App Manifest -->
    <link rel="manifest" href="/site.webmanifest">
    
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Christ Lutheran Church, Manhattan, KS</title>
    <script src="https://www.biblegateway.com/public/link-to-us/tooltips/bglinks.js" type="text/javascript"></script>
  </head>
  <body class="min-h-screen bg-liturgical-cream text-liturgical-black">
    <Navigation />
    <main>
      <slot />
    </main>
    <Footer />
    <script type="text/javascript">
      window.addEventListener('load', function() {
        if (typeof BGLinks !== 'undefined') {
          BGLinks.version = "ESV";
          BGLinks.linkVerses();
        }
      });
    </script>
  </body>
</html>

<style is:global>
  /* Keep existing styles */
</style>