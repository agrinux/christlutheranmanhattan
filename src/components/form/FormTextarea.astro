---
interface Props {
  label: string;
  name: string;
  id: string;
  rows?: number;
  required?: boolean;
}

const { label, name, id, rows = 4, required = false } = Astro.props;
---
<div>
  <label for={id} class="block text-sm font-medium text-gray-700 mb-1">{label}</label>
  <textarea
    name={name}
    id={id}
    rows={rows}
    required={required}
    class="w-full rounded-md border-gray-300 shadow-sm focus:border-liturgical-red focus:ring-liturgical-red text-base"
  ></textarea>
</div>