---
interface Props {
  title: string; 
}

const { title } = Astro.props;
---

<div>
  <h3 class="font-cinzel text-liturgical-gold text-xl mb-4 relative pb-3">
    {title}
    <span class="absolute bottom-0 left-0 w-12 h-0.5 bg-gradient-to-r from-liturgical-gold to-transparent"></span>
  </h3>
  <div class="space-y-2">
    <slot />
  </div>
</div>