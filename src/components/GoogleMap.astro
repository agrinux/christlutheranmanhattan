---
import { churchConfig } from '../config/church';

const mapUrl = `https://www.google.com/maps/embed/v1/place?key=YOUR_API_KEY&q=${encodeURIComponent(churchConfig.address.full)}`;
const directionsUrl = `https://www.google.com/maps/dir/?api=1&destination=${encodeURIComponent(churchConfig.address.full)}`;
---
<div class="space-y-4">
  <div class="aspect-w-16 aspect-h-9 rounded-lg overflow-hidden shadow-md">
    <iframe
      width="100%"
      height="100%"
      style="border:0"
      loading="lazy"
      allowfullscreen
      src={mapUrl}
      title="Church Location"
      class="w-full h-full"
    ></iframe>
  </div>
  <div class="text-center">
    <a 
      href={directionsUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-block bg-liturgical-red text-white px-6 py-2 rounded hover:bg-liturgical-burgundy transition-colors font-cinzel text-base sm:text-lg"
    >
      Get Directions
    </a>
  </div>
</div>